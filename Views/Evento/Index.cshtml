@model IEnumerable<SistemaDeEventos.Models.Evento>

<p>Bem vindo @TempData["Nome"] , Esperamos que vc encontre o melhor evento.</p>

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />

<div>
    <a class="btn btn-default" asp-controller="Evento" asp-action="Logout">
        <i class="glyphicon glyphicon-log-out"></i>
    </a>
</div>

<div class="col-md-12">

    <div class="pull-right">
        <a class="btn btn-default" type="submit" asp-controller="Evento" asp-action="NovoEvento">
            <i class="glyphicon glyphicon-plus"></i>
        </a>

        <a class="btn btn-default" type="submit">
            <i class="glyphicon glyphicon-pencil"></i>
        </a>

    </div>

    <div class="col-md-3 FaseImg">
        <img id="thumbnail"
            src="https://thumbs.dreamstime.com/b/do-retrato-masculino-do-avatar-do-%C3%ADcone-do-perfil-pessoa-ocasional-46846328.jpg"
            class="img-circle img-responsive center-block" alt="Imagem" width="150" />
    </div>

</div>

<br><br>
<table class="table table-sm table-dark">
    <thead>
        <tr>
            <th scope="col">Capacidade Maxima</th>
            <th scope="col">Descrição</th>
            <th scope="col">UF</th>
            <th scope="col">Cidade</th>
            <th scope="col">Bairro</th>
            <th scope="col">Rua</th>
            <th scope="col">CEP</th>
            <th scope="col">Participantes</th>
            <th scope="col">Junta-se ao Evento</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CapacidadeMaximaPessoas)</td>
                <td>@Html.DisplayFor(modelItem => item.DescricaoEvento)</td>
                <td>@Html.DisplayFor(modelItem => item.UF)</td>
                <td>@Html.DisplayFor(modelItem => item.Cidade)</td>
                <td>@Html.DisplayFor(modelItem => item.Bairro)</td>
                <td>@Html.DisplayFor(modelItem => item.Cidade)</td>
                <td>@Html.DisplayFor(modelItem => item.CEP)</td>
                <td>@Html.DisplayFor(modelItem => item.NumeroDePessoasParticipantes)</td>

                <td>
                    <a href="Evento/ParticiparEvento?EventoId=@item.EventoId">Participar do Evento</a>
                </td>


            </tr>

        }
    </tbody>
</table>
